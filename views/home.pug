extends base.pug

block scripts
  script(src='/static/index.js')

block style
  //- link(rel='stylesheet', href='../static/style.css')  
  link(rel='stylesheet', href='../static/style.css') 
block content
  section#introSection
    div Welcome to Dance Academy.
    //- div.small Eat Sleep Learn And Dance Repeat

  section#missionSection
    h2 Our Mission
    div.card
      h3 Dance Perfection
      div.card-box
        div.card-img
          img(src='../static/img/1.png', alt='Image 1', height='75px')
        div.card-content
          p This is the best Dance Academy.

    div.card
      h3 Dance the way you like
      div.card-box
        div.card-img
          img(src='../static/img/pic.png', alt='Image 2', height='75px')
        div.card-content
          p This is the best Dance Academy.

    div.card
      h3 Expert Teaching
      div.card-box
        div.card-img
          //- img(src='../static/img/2.png', alt='Image 3', height='75px')  // Corrected the src attribute
          img(src='static/img/2.png', alt='Image 3', height='75px')
        div.card-content
          p This is the best Dance Academy.

  section#sponsorsSection
    h2 Our Sponsors
    div#sponsors
      img(src="../static/img/apple.png", alt="Apple Image" class="spImage")
      img(src="../static/img/hp.png", alt="Hp Image" class="spImage")
      img(src="../static/img/microsoft.png", alt="Microsoft Image" class="spImage")
      img(src="../static/img/skype.png", alt="Skype Image" class="spImage")
